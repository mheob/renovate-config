{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Assign `deps :package:` and `bot :robot:` labels, and for major updates `major :warning:`",
	"packageRules": [
		{ "labels": ["deps :package:", "bot :robot:"], "matchPackageNames": ["*"] },
		{
			"labels": ["major :warning:", "deps :package:", "bot :robot:"],
			"matchUpdateTypes": ["major"]
		}
	],
	"dependencyDashboardLabels": ["bot :robot:"]
}
