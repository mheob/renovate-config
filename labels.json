{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Assign `deps :package:` and `bot :robot:` labels, and for major updates `major :warning:`",
	"packageRules": [
		{ "labels": ["deps 📦", "bot 🤖"], "matchPackageNames": ["*"] },
		{
			"labels": ["major ⚠️", "deps 📦", "bot 🤖"],
			"matchUpdateTypes": ["major"]
		}
	],
	"dependencyDashboardLabels": ["bot 🤖"]
}
